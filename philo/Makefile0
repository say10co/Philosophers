SRC = main.c emulation.c utils.c atoi.c init.c 

NAME = philo

FLAGS = -Wall -Werror -Wextra 
FS = -fsanitize=address -g
all: $(NAME)

$(NAME): $(SRC)
	cc $(FLAGS) $(SRC) $(FS) -o $(NAME)

clean:
	
fclean:	clean
	rm -rf $(NAME)

re : fclean all

